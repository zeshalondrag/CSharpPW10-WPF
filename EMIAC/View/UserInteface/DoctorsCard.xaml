<UserControl x:Class="EMIAC.View.UserInteface.DoctorsCard"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:EMIAC.View.UserInteface"
             mc:Ignorable="d" 
             d:DesignHeight="90" d:DesignWidth="160">
    <Grid>
        <StackPanel Background="White" Height="90" Width="160" >
            <Image Width="29" Height="28" Margin="10" x:Name="ImageIcon"/>
            <TextBlock FontSize="14" TextWrapping="Wrap" Height="39" Width="88" TextAlignment="Center" x:Name="TextDesc"/>
        </StackPanel>
    </Grid>
</UserControl>
